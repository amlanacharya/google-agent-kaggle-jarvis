# Environment Configuration
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Application
APP_NAME=Jarvis Assistant
APP_VERSION=0.1.0
APP_HOST=0.0.0.0
APP_PORT=8000

# Google Cloud & Gemini
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GEMINI_MODEL=gemini-pro

# OpenAI (Fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude (Fallback)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# Vector Database
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENV=your_pinecone_environment
WEAVIATE_URL=http://localhost:8080

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=jarvis_db

# Message Queue
RABBITMQ_URL=amqp://guest:guest@localhost:5672
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Google Calendar API
GOOGLE_CALENDAR_CREDENTIALS=/path/to/calendar-credentials.json

# Gmail API
GMAIL_CREDENTIALS=/path/to/gmail-credentials.json

# Speech Services
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=your_voice_id

# Web Search
SERPER_API_KEY=your_serper_api_key
TAVILY_API_KEY=your_tavily_api_key

# IoT Integration
HOME_ASSISTANT_URL=http://localhost:8123
HOME_ASSISTANT_TOKEN=your_home_assistant_token
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090

# Security
SECRET_KEY=your_secret_key_here_generate_with_openssl
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Memory Settings
MAX_CONTEXT_MESSAGES=10
MAX_MEMORY_VECTORS=10000
EMBEDDING_MODEL=text-embedding-ada-002

# Task Processing
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT_SECONDS=300

# Voice Settings
WAKE_WORD=jarvis
VOICE_LANGUAGE=en-US
SPEECH_RECOGNITION_TIMEOUT=5

# Development
RELOAD_ON_CHANGE=true
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
